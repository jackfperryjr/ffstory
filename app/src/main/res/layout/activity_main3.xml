    <TextView
            android:layout_width="210dp"
            android:layout_height="80dp"
            android:text="" android:textSize="32sp"
            android:id="@+id/character_name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            android:textColor="@color/colorPrimaryDark"/>
    <ImageView
            android:layout_width="101dp" android:layout_height="79dp"
            app:layout_constraintTop_toTopOf="parent" android:background="#ffffff"
            android:id="@+id/character_avatar" android:scaleType="fitCenter"
            android:layout_marginTop="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="268dp" android:layout_marginStart="268dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp" app:layout_constraintHorizontal_bias="0.777"/>

    <!-- Original design -->
    <ListView
            android:text="" android:paddingStart="0dp" android:paddingEnd="0dp"
            android:layout_width="374dp" android:headerDividersEnabled="true"
            android:layout_height="285dp" android:clipToPadding="false"
            android:id="@+id/messages" android:layout_marginEnd="21dp" android:layout_marginRight="21dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="21dp" android:layout_marginStart="21dp" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/character_avatar" android:footerDividersEnabled="true"
            android:transcriptMode="alwaysScroll" android:divider="#00000000"
            android:stackFromBottom="true"/>

    <EditText
            android:layout_width="316dp" android:layout_height="42dp"
            app:layout_constraintStart_toStartOf="parent" android:paddingLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/messages" android:imeOptions="actionSend"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@+id/send_button" android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp" android:id="@+id/compose_message" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/back_button"/>
    <Button
            android:text=">" android:textSize="30sp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/send_button"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/circle2"
            android:textColor="@color/colorText" android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="18dp" android:layout_marginRight="18dp"
            app:layout_constraintStart_toEndOf="@+id/compose_message" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/messages" android:layout_marginBottom="144dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_button"
