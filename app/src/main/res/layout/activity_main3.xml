<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main3Activity">

    <TextView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:text=""
            android:id="@+id/character_name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="21dp" android:layout_marginStart="21dp"
            android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:text=""
            android:id="@+id/character_age"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="90dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="21dp" android:layout_marginStart="21dp"
            android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:text=""
            android:id="@+id/character_gender"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="21dp" android:layout_marginStart="21dp"
            android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:text=""
            android:id="@+id/character_race"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="150dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="21dp" android:layout_marginStart="21dp"
            android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:text=""
            android:id="@+id/character_job"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="180dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="21dp" android:layout_marginStart="21dp"
            android:textColor="@color/colorPrimaryDark"/>
    <ImageView
            android:layout_width="173dp" android:layout_height="155dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/character_avatar" android:scaleType="fitCenter"
            android:layout_marginTop="60dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="268dp" android:layout_marginStart="268dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp" app:layout_constraintHorizontal_bias="0.777"/>
    <EditText android:layout_width="363dp" android:layout_height="241dp"
              android:layout_marginEnd="21dp" android:layout_marginRight="21dp"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="21dp" android:layout_marginStart="21dp" android:layout_marginBottom="19dp"
              app:layout_constraintBottom_toTopOf="@+id/back_button"
              app:layout_constraintHorizontal_bias="0.0"
              android:layout_marginTop="9dp" app:layout_constraintTop_toBottomOf="@+id/character_avatar"/>
    <Button
            android:text="@string/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" android:layout_marginRight="162dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="162dp"
            android:layout_marginStart="162dp" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/circle"
            android:textColor="@color/colorText"/>

</android.support.constraint.ConstraintLayout>