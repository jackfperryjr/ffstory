<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/chat_layout"
        tools:context=".Main3Activity" android:background="#ffffff">

    <TextView
            android:layout_width="265dp"
            android:layout_height="80dp"
            android:text="" android:textSize="32sp"
            android:id="@+id/character_name"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toTopOf="@+id/messages" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="19dp" android:layout_marginRight="19dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/character_avatar"
            android:layout_marginLeft="5dp" android:layout_marginStart="5dp"/>
    <ImageView
            android:layout_width="101dp" android:layout_height="79dp"
            android:background="#ffffff"
            android:id="@+id/character_avatar" android:scaleType="fitCenter"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/messages" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="21dp" android:layout_marginStart="21dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/character_name"
            android:layout_marginEnd="5dp" android:layout_marginRight="5dp"/>

    <!-- Original design -->
    <ListView
            android:text="" android:paddingStart="0dp" android:paddingEnd="0dp"
            android:layout_width="374dp" android:headerDividersEnabled="true"
            android:layout_height="364dp" android:clipToPadding="false"
            android:id="@+id/messages" android:layout_marginEnd="21dp" android:layout_marginRight="21dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="21dp" android:layout_marginStart="21dp"
            android:footerDividersEnabled="true"
            android:transcriptMode="alwaysScroll" android:divider="#00000000"
            android:stackFromBottom="true" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/character_name"/>

    <EditText
            android:layout_width="316dp" android:layout_height="42dp"
            app:layout_constraintStart_toStartOf="parent" android:paddingLeft="5dp"
            android:imeOptions="actionSend"
            android:background="@drawable/rounded_edittext"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toStartOf="@+id/send_button" android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp" android:id="@+id/compose_message"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/messages"
            android:layout_marginBottom="1dp" app:layout_constraintBottom_toTopOf="@+id/back_button"/>
    <Button
            android:text=">" android:textSize="30sp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/send_button"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/circle2"
            android:textColor="@color/colorText" android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="18dp" android:layout_marginRight="18dp"
            app:layout_constraintStart_toEndOf="@+id/compose_message" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/messages"
            android:layout_marginBottom="67dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_button" style="?android:attr/borderlessButtonStyle"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorText" app:layout_constraintTop_toBottomOf="@+id/compose_message"
            android:textColor="@color/snackbarBackground" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="144dp"
            android:layout_marginStart="144dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="145dp" android:layout_marginRight="145dp"/>

</android.support.constraint.ConstraintLayout>