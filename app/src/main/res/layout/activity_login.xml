<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
    <ImageView
            android:layout_width="120dp" android:layout_marginBottom="30dp"
            android:layout_height="120dp" app:srcCompat="@drawable/lightning" android:id="@+id/logo"/>
        <EditText
                android:id="@+id/login_input_email"
                android:textColor="@color/colorPrimaryDark" android:background="@drawable/rounded_edittext"
                android:layout_width="match_parent" android:paddingLeft="10dp"
                android:layout_height="35dp" android:layout_marginBottom="20dp"
                android:inputType="text"
                android:hint="enter username"/>
        <EditText
                android:id="@+id/login_input_password"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="35dp" android:paddingLeft="10dp"
                android:inputType="textPassword" android:background="@drawable/rounded_edittext"
                android:hint="enter password"/>
    <Button android:id="@+id/btn_login"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="login"
            android:background="@drawable/circle2"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"/>
    <Button android:id="@+id/btn_link_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="signup"
            android:background="@null"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorPrimaryDark"/>

</LinearLayout>