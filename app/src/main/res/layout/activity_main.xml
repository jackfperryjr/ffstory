<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/colorPrimaryDark">

    <TextView
            android:layout_width="254dp"
            android:layout_height="68dp"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/character_list"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:scrollbars="vertical"
            android:layout_alignParentEnd="true"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="79dp" android:layout_marginRight="79dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="78dp"
            android:layout_marginStart="78dp" android:layout_marginBottom="57dp"
            app:layout_constraintBottom_toTopOf="@+id/reload_button"
            android:layout_marginTop="23dp" app:layout_constraintTop_toBottomOf="@+id/character_avatar"
            android:textColor="@color/colorText" android:textSize="24sp"/>
    <Button
            android:text="@string/reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reload_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" android:layout_marginRight="162dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="162dp"
            android:layout_marginStart="162dp" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/circle" android:textColor="@color/colorText"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/character_avatar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="23dp"
            app:layout_constraintBottom_toTopOf="@+id/character_list"
            android:cropToPadding="false" android:scaleType="fitCenter" android:contentDescription="@string/avatar"
            android:background="@color/colorText" android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />

</android.support.constraint.ConstraintLayout>